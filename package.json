{
  "name": "@mdit-vue/monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r --stream build",
    "check-types": "tsc --noEmit --skipLibCheck",
    "clean": "pnpm -r --stream clean",
    "dev": "vitest",
    "format": "prettier --write .",
    "lint": "eslint . && prettier --check .",
    "prepare": "husky",
    "release": "pnpm release:check && lerna publish",
    "release:check": "pnpm clean && pnpm build && pnpm check-types && pnpm lint && pnpm test",
    "test": "vitest run"
  },
  "lint-staged": {
    "*.!(js|ts)": "prettier --write --ignore-unknown",
    "*.(js|ts)": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@lerna-lite/cli": "^4.0.0",
    "@lerna-lite/publish": "^4.0.0",
    "@meteorlxy/eslint-config": "^5.0.0",
    "@meteorlxy/prettier-config": "^5.0.0",
    "@meteorlxy/tsconfig": "^5.0.0",
    "@vitest/coverage-istanbul": "^3.1.2",
    "eslint": "^9.25.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "sort-package-json": "^3.0.0",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.1.2"
  },
  "packageManager": "pnpm@10.9.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
