{
  "name": "@mdit-vue/monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r --stream build",
    "check-types": "tsc --noEmit --skipLibCheck",
    "clean": "pnpm -r --stream clean",
    "dev": "vitest",
    "format": "prettier --write .",
    "lint": "eslint . && prettier --check .",
    "prepare": "husky",
    "release": "pnpm release:check && lerna publish",
    "release:check": "pnpm clean && pnpm build && pnpm check-types && pnpm lint && pnpm test",
    "test": "vitest run"
  },
  "lint-staged": {
    "*.!(js|ts)": "prettier --write --ignore-unknown",
    "*.(js|ts)": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "catalog:dev",
    "@commitlint/config-conventional": "catalog:dev",
    "@lerna-lite/cli": "catalog:dev",
    "@lerna-lite/publish": "catalog:dev",
    "@meteorlxy/eslint-config": "catalog:dev",
    "@meteorlxy/prettier-config": "catalog:dev",
    "@meteorlxy/tsconfig": "catalog:dev",
    "@vitest/coverage-istanbul": "catalog:dev",
    "eslint": "catalog:dev",
    "husky": "catalog:dev",
    "lint-staged": "catalog:dev",
    "prettier": "catalog:dev",
    "rimraf": "catalog:dev",
    "sort-package-json": "catalog:dev",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest": "catalog:dev"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
